@model Buy_And_Sell.Models.Vehicle
@{
    ViewData["Title"] = "VehicleEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="VehicleEdit" enctype="multipart/form-data">
    <input asp-for="VehicleId" hidden/>
    <div class="border p-3">
  
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit @Model.Name</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="Model"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="Year"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Year" class="form-control" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="Discription"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Discription" class="form-control" />
                        <span asp-validation-for="Discription" class="text-danger"></span>
                    </div>

                </div>


                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="Image"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Image" class="form-control" value="@Model.Image" />
                        <img src="~/Images/@Model.Image" class="rounded-circle" width="50" height="50" asp-append-version="true" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>

                </div>

                <br /><br />

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="VehicleIndex" class="btn btn-success w-100">
                                BACK
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @*keep this empty*@
            </div>
        </div>


    </div>
</form>

@section Scripts{
    
    @{ <partial name="_ValidationScriptsPartial" /> }
    
    }



