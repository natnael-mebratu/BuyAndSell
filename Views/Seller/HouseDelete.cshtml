@model Buy_And_Sell.Models.House
@{
    ViewData["Title"] = "HouseDelete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>HouseDelete</h1>
    <div class="border p-3">
  
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete @Model.Type</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Type"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Type" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="Size"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Size" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="NumberOfBedRooms"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="NumberOfBedRooms" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="Location"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Location" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="Level"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Level" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control" />
                    </div>

                </div>

                                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="Discription"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Discription" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="Image"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Image" class="form-control" disabled value="@Model.Image" />
                        <img src="~/Images/@Model.Image" class="rounded-circle" width="50" height="50" asp-append-version="true" />
                    </div>

                </div>

                <br /><br />

            </div>
            <div class="col-4">
                @*keep this empty*@
            </div>
        </div>


    </div>
<form method="post" asp-action="HouseDeletePost" asp-route-Id="VehicleId">
   <input asp-for="HouseId" hidden/>
    <div class="form-group row">
        <div class="col-8 offset-4 row">
            <div class="col">
                <input type="submit" class="btn btn-danger w-100" value="Delete" />
            </div>
            <div class="col">
                <a asp-action="HouseIndex" class="btn btn-success w-100">
                    BACK
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    
    @{ <partial name="_ValidationScriptsPartial" /> }
    
    }







