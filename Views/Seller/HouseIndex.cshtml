@model IEnumerable<Buy_And_Sell.Models.House>
@{
    ViewData["Title"] = "HouseIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>My House</h1>
<br/><br/>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">House List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Seller" asp-action="HouseAdd" class="btn btn-primary">
                Add new House
            </a>
        </div>
    </div>

    <br /><br />
    <form method="get" asp-action="HouseIndex">
        <p>
            <input type="search" placeholder="Enter Vehicle Name Or ..." value="@ViewData["getproduct"]" name="prodSearch" style="width:80%;"/>
            <input type="submit" value="Search" class="btn btn-primary"/>
            <a asp-action="HouseIndex"> | Get All Products</a>
        </p>

    </form>
    <br /><br />

    @if (Model.Count() > 0) 
    {
      <table class="table table-bordered table-striped" style="width:100%">
          <thead>
              <tr>
                  <th>
                      Type
                  </th>
                  <th>
                      Size
                  </th>
                  <th>
                      Number Of Bed Rooms
                  </th>
                  <th>
                      Location
                  </th>
                  <th>
                      Level
                  </th>
                  <th>
                      Price
                  </th>
                  <th>
                      DIscription
                  </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Seller
                    </th>
                  <th></th>
              </tr>
          </thead>
          <tbody>
              @foreach(var item in Model)
              {
              <tr>
                  <td width="20%">@item.Type</td>
                  <td width="10%">@item.Size</td>
                  <td width="10%">@item.NumberOfBedRooms</td>
                  <td width="10%">@item.Location</td>
                  <td width="10%">@item.Level</td>
                  <td width="10%">@item.Price</td>
                  <td width="10%">@item.Discription</td>
                  <td width="20%"><img src="~/Images/@item.Image" class="rounded-circle" width="50" height="50" asp-append-version="true"/></td>
                  <td width="10%">@User.Identity.Name</td>
                  <td class="text-center">
                      <div class="w-85 btn-group" role="group">
                               @*<a asp-controller="Seller" asp-route-Id="@item.HouseId" asp-action="Detail" class="btn btn-success mx-2">
                                    Detail's
                                </a>*@
                                <a asp-controller="Seller" asp-route-Id="@item.HouseId" asp-action="VehicleEdit" class="btn btn-primary mx-2">
                                    Edit
                                </a>
                                <a asp-controller="Seller" asp-route-Id="@item.HouseId" asp-action="VehicleDelete" class="btn btn-danger mx-2">
                                    Delete
                                </a>
                      </div>
                  </td>
              </tr>
              
              }
          </tbody>
      </table>       
    }
    else
    {
        <p>NO ITEMS TO BE DISPLAYED!</p>
    }
</div>

<a asp-action="Index" class="btn btn-success w-100">
    BACK
</a>