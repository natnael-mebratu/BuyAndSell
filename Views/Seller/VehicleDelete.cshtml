@model Buy_And_Sell.Models.Vehicle
@*@{
    ViewData["Title"] = "VehicleDelete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}*@
    <div class="border p-3">
  
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete @Model.Name</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="Model"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Model" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="Year"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Year" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="Discription"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Discription" disabled class="form-control" />
                    </div>

                </div>


                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="Image"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Image" class="form-control" disabled value="@Model.Image" />
                        <img src="~/Images/@Model.Image" class="rounded-circle" width="50" height="50" asp-append-version="true" />
                    </div>

                </div>

                <br /><br />
            </div>
            <div class="col-4">
                @*keep this empty*@
            </div>
        </div>


    </div>
<form method="post" asp-action="VehicleDeletePost">
    <input asp-for="VehicleId" hidden />
                    <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                        <input type="submit" class="btn btn-danger w-100" value="Delete" />

                 </div>
                    <div class="col">
                            <a asp-action="VehicleIndex" class="btn btn-success w-100">
                                BACK
                            </a>
                        </div>
                    </div>
                </div>
</form>

@section Scripts{
    
    @{ <partial name="_ValidationScriptsPartial" /> }
    
    }





